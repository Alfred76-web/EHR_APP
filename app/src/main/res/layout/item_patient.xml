<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvPatientName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="John Doe"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"/>

            <TextView
                android:id="@+id/tvPatientId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID: 001"
                android:textSize="12sp"
                android:textColor="#666666"
                android:background="#E3F2FD"
                android:padding="4dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvPatientDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Age: 35 | Gender: Male | Blood: O+"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tvPatientContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“ž +1234567890"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tvRegistrationDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registered: 01/01/2024"
            android:textSize="12sp"
            android:textColor="#999999"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>